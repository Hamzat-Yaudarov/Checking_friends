{
  "version": 2,
  "buildCommand": "npm run build",
  "env": {
    "BOT_TOKEN": "@bot_token",
    "DATABASE_URL": "@database_url",
    "NODE_ENV": "production"
  },
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "memory": 512
    }
  },
  "routes": [
    {
      "src": "/",
      "dest": "/api/index.ts"
    }
  ]
}
